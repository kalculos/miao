///|
/// Clientbound Keep Alive (configuration) packet (0x04)
/// Server sends to keep connection alive
pub(all) struct ClientboundKeepAliveConfigS2C {
  keep_alive_id : Int64 // Random ID generated by server
}

///|
pub impl @mc.Packet for ClientboundKeepAliveConfigS2C with clientbound(_) {
  true
}

///|
pub impl @mc.Packet for ClientboundKeepAliveConfigS2C with serialize(
  self,
  buf : &@buffer.Buffer,
) {
  buf.write_int64(self.keep_alive_id)
}

///|
pub impl @mc.Packet for ClientboundKeepAliveConfigS2C with deserialize(
  buf : &@buffer.Buffer,
) {
  { keep_alive_id: buf.read_int64() }
}
